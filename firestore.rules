rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 1. [OrderSync] 제품 검색 및 약어표 조회를 위한 권한 허용
    // 제품 마스터 DB (읽기 전용 허용)
    match /products/{id} {
      allow read: if true;
    }
    // 약어표 데이터 (읽기/쓰기 허용)
    match /abbreviations/{id} {
      allow read, write: if true;
    }
    // 매칭 결과 저장 (읽기/쓰기 허용)
    match /conversions/{id} {
      allow read, write: if true;
    }

    // [Caliper-Manual] 부속품 데이터
    // 앱에서 로그인을 강제하므로 인증된 사용자만 접근 허용
    match /parts/{id} {
      allow read, write: if request.auth != null;
    }

    // 2. [기존 Workflow 유지 + 사용자 관리] users 컬렉션
    match /users/{userId} {
      // 1) 본인 데이터는 본인이 읽고 쓸 수 있음
      // 2) 관리자(admin) 또는 매니저(manager)는 모든 사용자 정보를 읽을 수 있음 (설정 메뉴용)
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && (
        request.auth.uid == userId || 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'manager']
      );
    }
    
    // 3. [기존 Workflow 유지] 그 외 모든 컬렉션은 반드시 로그인이 필요함
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
